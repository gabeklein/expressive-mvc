
{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@expressive/*": [
        "../*/src"
      ],
      "@expressive/react/hooks": [
        "../react/src/hooks"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}