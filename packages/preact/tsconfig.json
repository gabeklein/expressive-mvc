{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "types": [
      "jest",
      "preact"
    ],
    "paths": {
      "@expressive/*": [
        "../*/src"
      ],
      "@expressive/react/state": [
        "../react/src/state"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}