{
  "testTimeout": 1000,
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.[tj]sx?$": ["@swc/jest", {
      "jsc": {
        "transform": {
          "react": {
            "runtime": "automatic",
            "importSource": ".",
            "development": false,
            "useBuiltins": false
          }
        }
      }
    }]
  },
  "coveragePathIgnorePatterns": [
    "index.ts"
  ],
  "setupFilesAfterEnv": [
    "./jest.setup.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleNameMapper": {
    "@expressive/(.*)$": "<rootDir>/../$1/src"
  }
}