{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2020",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "types": [ "jest", "react" ],
    "paths": {
      "@expressive/*": [
        "packages/*/src"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "./dist"
  ]
}