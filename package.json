		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.35.0",
		"jest": "^27.5.1",
		"lerna": "^6.5.1",
		"rollup": "^2.61.1",
		"rollup-plugin-dts": "^4.2.1",
		"rollup-plugin-typescript2": "^0.31.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@swc/core": "^1.3.80",
		"@swc/jest": "^0.2.29"
	}
